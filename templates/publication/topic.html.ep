            <a name="summary">&nbsp;</a>

            % my $genes = stash('genes');
            % my $rowspan = scalar @$genes;
            <table border="1" align="center" cellspacing="2" cellpadding="4" width="100%">
              <tr>
                <td rowspan="2"></td>
                <th bgcolor="#869FB6" align="center" colspan="<%= $rowspan %>">Genes addressed in this
                paper</th>
              </tr>

              <tr>
               % for my $name(@$genes) {
                	<th bgcolor="#B7D8E4" align="center" rowspan="2" valign="center">
                	<a target="infowin" href= "/gene/<%= $name %>"><%= $name %></a></th>
							 % }
              </tr>


                <th bgcolor="#869FB6" align="center">Topics in this paper</th>

							 % my $width = int (80 / scalar @$genes) ;
							 % for my $topic( keys %$topic2genes) { 
              	<tr>
                <td width="20%"><%= $topic %></td>

									% for my $name(@{$topic2genes->{$topic}}) {
										% if ($name eq 'none') {
                				<td width="<%= $width %>%"><br /></td>
                    % }
                    % else {
                				<td align="center" width="10%"><a target="infowin" href=
                				"/gene/<%= $name %>/references">
                				X</a></td>
                    % }
							 		%}
							 %}

              </table>

              
            
